		<template name="blog_page_display_section" id="blog_page_display_section" inherit_id="theme_aditim.blog_aggregator_page">
			<xpath expr="//div[@id='blog_display_section']" position="replace">
				<div id="blog_display_section">
				      <div class="blog-main-left">
				        <ul t-if="all_blog_posts">
				        	<t t-foreach="all_blog_posts" t-as="p">
				        		<t t-if="p_index &lt; 3">
						          <li> <div t-field="p.blogPostImage" t-field-options='{"widget": "image"}'/>
						            <h3><a t-attf-href="/page/#{ slug(p.blog_id) }/post/#{ slug(p) }" class="htrlink"><t t-esc="p.name"></t></a></h3>
						            <a t-attf-href="/page/#{ slug(p.blog_id) }/post/#{ slug(p) }" class="plink"><p><t t-esc="p.description"></t></p></a>
						            <span t-field="p.create_date" t-field-options='{"format": "dd MMMM"}'/>
						           	<t t-if="len(p.message_ids) &gt; 0"> 
						            	<span><img src="/theme_aditim/static/src/images/chat-icon.png" alt="" /><a t-attf-href="/page/#{ slug(p.blog_id) }/post/#{ slug(p) }" class="clink"> <t t-esc="len(p.message_ids)"/> комментария</a></span>
						            </t><br />
						            <span t-if="not p.website_published" class="label label-danger white_text" style="color: white;">not published</span></li>
					            </t>
				            </t>
				        </ul>
				      </div>
				      <div id="right_panel" class="blog-main-left right">
				        <ul>
				        	<li id="blog_tagcloud"></li>
				        	<t t-if="all_blog_posts">
								<t t-foreach="all_blog_posts" t-as="p">
									<t t-if="(p_index &gt; 2) and (p_index &lt; 5)">
							          <li> <div t-field="p.blogPostImage" t-field-options='{"widget": "image"}'/>
							            <h3><a t-attf-href="/page/#{ slug(p.blog_id) }/post/#{ slug(p) }" class="htrlink"><t t-esc="p.name"></t></a></h3>
							            <a t-attf-href="/page/#{ slug(p.blog_id) }/post/#{ slug(p) }" class="plink"><p><t t-esc="p.description"></t></p></a>
							            <span t-field="p.create_date" t-field-options='{"format": "dd MMMM"}'/>
							           	<t t-if="len(p.message_ids) &gt; 0"> 
							            	<span><img src="/theme_aditim/static/src/images/chat-icon.png" alt="" /><a t-attf-href="/page/#{ slug(p.blog_id) }/post/#{ slug(p) }" class="clink"> <t t-esc="len(p.message_ids)"/> комментария</a></span>
							            </t><br />
							            <span t-if="not p.website_published" class="label label-danger" style="color: white;">not published</span></li>
						            </t>
								</t>
							</t>
				        </ul>
				      </div>
		      </div>
			</xpath>
		</template>
		<template name="blog_tagcloud_section" id="blog_tagcloud_section" inherit_id="theme_aditim.blog_page_display_section">
			<xpath expr="//li[@id='blog_tagcloud']" position="inside">
				<div class="cloud-tag">
                    <div id="myCanvasContainer">
                        <canvas height="300" style="width:100%;" id="myCanvas">
                            <p>Anything in here will be replaced on browsers that support the canvas element</p>
                        </canvas>
                    </div>
                        <div id="tags" style="display:none">
                            <ul>
                            	<t t-foreach="blog_tags" t-as="bt">
                                	<li><a t-attf-href="/page/tag/#{ slug(bt) }"><t t-esc="bt.name"></t></a></li>
                                </t>
                            </ul>
                        </div>
				</div>
			</xpath>
		</template>
		<template name="blog_pagination_display_section" id="blog_pagination_display_section" inherit_id="theme_aditim.blog_aggregator_page">
			<xpath expr="//div[@id='blog_pagination']" position="replace">
				<div t-if="pager" id="blog_pagination" class="col-sm-12 text-center">
					<ul t-if="pager['page_count'] > 1" t-attf-class="#{ classname or '' } pagination" t-att-style="style or ''">
				        <li t-att-class=" 'disabled' if pager['page']['num'] == 1 else '' ">
				            <a t-att-href=" pager['page_previous']['url'] if pager['page']['num'] != 1 else ''"><i class="glyphicon glyphicon-chevron-left"></i></a>
				        </li>
				        <t t-foreach="pager['pages']" t-as="page">
				            <li t-att-class=" 'active' if page['num'] == pager['page']['num'] else '' "> <a t-att-href="page['url']" t-raw="page['num']"></a></li>
				        </t>
				        <li t-att-class=" 'disabled' if pager['page']['num'] == pager['page_count'] else '' ">
				            <a t-att-href="pager['page_next']['url'] if pager['page']['num'] != pager['page_count'] else ''"><i class="glyphicon glyphicon-chevron-right"></i></a>
				        </li>
				    </ul>
			     </div>
			</xpath>
		</template>
