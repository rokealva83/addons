		<template name="search_string_section" id="search_string_section" inherit_id="theme_aditim.search_page">
			<xpath expr="//div[@id='search_string']" position="replace">
				<div id="search_string" class="blogb-h">
			        <h2 t-if="search">
			          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
			          <t t-esc="search"/></h2>
			    </div>
			</xpath>
		</template>			    
		
		<template name="search_result_section" id="search_result_section" inherit_id="theme_aditim.search_page">
			<xpath expr="//div[@id='search_result']" position="replace">
				<div id="search_result" class="search-page">
			        <ul t-if="results">
			        	<t t-foreach="results" t-as="result">
			        		<t t-call="theme_aditim.search_result_layout"/>
			        	</t>
			     	</ul>
			     </div>
			</xpath>
		</template>
		
		<template name="search_result_layout" id="search_result_layout">
			<li t-if="result['type']=='Blog post'" >
	            <h3><a t-attf-href="#{result['url']}"><t t-esc="result['name']"/></a></h3>
	            <t t-raw="result['content']" />
	            <small>Найдено в разделе: <span>Блог</span></small> 
	        </li>
	        <li t-if="result['type']=='Blog post comment'" >
	            <h3><a t-attf-href="#{result['url']}"><t t-esc="result['name']"/></a></h3>
	            <t t-raw="result['content']" />
	            <small>Найдено в разделе: <span>Блог</span></small> 
	        </li>

	        <!-- For Cases -->
	        <!-- <li t-if="result['type']=='Page'" >
	            <h3><a t-attf-href="#{result['url']}"><t t-esc="result['name']"/></a></h3>
	            <p><t t-esc="result['content']" /></p>
	            <small>Найдено в разделе: <span>Проекты</span></small> 
	        </li> -->
	        <li t-if="result['type']=='Product'" >
	            <h3><a t-attf-href="#{result['url']}"><t t-esc="result['name']"/></a></h3>
	            <t t-raw="result['content']" />
	            <small>Найдено в разделе: <span>Продукты</span></small> 
