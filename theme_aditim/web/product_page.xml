		<template name="product_category_section" id="product_category_section" inherit_id="theme_aditim.product_page">
			<xpath expr="//ul[@id='product_categories']" position="replace">
				<ul id="product_categories">
					<t t-foreach="productCategories" t-as="c">
						<t t-if="c.isMainCategory">
							<li>
								<t t-if="c.hasSubCategory">
									<a data-toggle="collapse" data-target="#demo" href="#demo">
										<img alt="" t-att-src="c.categoryImage" />
										<p><t t-esc="c.name"></t></p>
									</a>
					           		<span>Стандарт «Теплый край»</span>
								</t>
								<t t-if="not c.hasSubCategory">
									<a t-attf-href="/page/product_interior_page/#{ slug(c) }">
										<img alt="" t-att-src="c.categoryImage" />
										<p><t t-esc="c.name"></t></p>
									</a>
									<span>Стандарт «Теплый край»</span>
								</t>
							</li>
						</t>
					</t>
				</ul>
			</xpath>
		</template>
		
