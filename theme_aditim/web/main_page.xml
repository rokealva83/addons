		          <ul>
		          	<t t-foreach="latest_blog" t-as="blog">
			            <li>
			            	<a t-attf-href="/page/#{ slug(blog.blog_id) }/post/#{ slug(blog) }" t-field="blog.blogPostImage" t-field-options='{"widget": "image"}'/>
			              	<p><a t-attf-href="/page/#{ slug(blog.blog_id) }/post/#{ slug(blog) }" class="mblink"><t t-esc="blog.name"></t></a></p>
			              	<span t-field="blog.create_date" t-field-options='{"format": "dd MMMM"}'/>
			              	<t t-if="len(blog.message_ids) &gt; 0"> 
				            	<span><img src="/theme_aditim/static/src/images/chat-icon.png" width="9" height="10" alt="" /><a t-attf-href="/page/#{ slug(blog.blog_id) }/post/#{ slug(blog) }" class="clink"> <t t-esc="len(blog.message_ids)"/> комментария</a></span>
				            </t>
			            </li>
