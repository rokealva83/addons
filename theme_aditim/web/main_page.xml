		<template name="main_page_product_section" id="main_page_product_section" inherit_id="theme_aditim.main_home_page">
			<xpath expr="//div[@id='product_cat_section']" position="replace">
				<div id="product_cat_section" class="portfolio">
		          <ul>
		          	<t t-foreach="productMainCategories" t-as="c">
			            <t t-if="c.isMainCategory">
							<li>
								<t t-if="c.hasSubCategory">
									<a href="/page/product_page">
										<img alt="" t-att-src="c.categoryImage" />
										<p><t t-esc="c.name"></t></p>
									</a>
								</t>
								<t t-if="not c.hasSubCategory">
									<a t-attf-href="/page/product_interior_page/#{ slug(c) }">
										<img alt="" t-att-src="c.categoryImage" />
										<p><t t-esc="c.name"></t></p>
									</a>
								</t>
							</li>
						</t>
		          	</t>
		          </ul>
		        </div>
			</xpath>
		</template>
		<template name="main_page_blog_section" id="main_page_blog_section" inherit_id="theme_aditim.main_home_page">
			<xpath expr="//div[@id='new_blog']" position="replace">
